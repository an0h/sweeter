<.header>
  <%= @item.title %>
  <:subtitle>From.</:subtitle>
  <:actions>
    <.link href={~p"/items/#{@item}/edit"}>
      <.button>Edit item</.button>
    </.link>
  </:actions>
</.header>

<%= if @item.images do %>
  <%= for image <- @item.images do %>
  <img src={"https://sweetipfs.herokuapp.com/read?ipfscid=#{image.ipfscid}"} />
  <% end %>
<% end %>
<div id="item-contents">
<.list>
  <:item title="Title"><%= @item.title %></:item>
  <:item title="Body"><%= @item.body %></:item>
  <:item title="Source"><%= @item.source %></:item>
</.list>
</div>
<div id="translation">
</div>
<.button id="translate">Translate</.button>

<.back navigate={~p"/items"}>Back to items</.back>

<div id="your-reaction"></div>
<div class="reactions">
<ul> 
<%= for reaction <- @item.reactions do %>
<li><%= reaction.emoji %><span class="reaction-count"><%= reaction.count %></span></li>
<% end %>
</ul>
</div>
<div class="add-reactions">
<div id="emoji-trigger">â˜€ï¸your reactionsğŸŒ‘</div>
<input type="hidden" id="item_id" value={@item.id}>
<input type="hidden" id="address" value={@address}>
</div>

<%= if @address != "" do %>
<.moderation_form changeset={@moderation_changeset} action={~p"/moderations"} />
<% end %>

<%= if @is_moderator == true do %>
  <%= for moderation <- @item.moderations do %>
  <li><%= moderation.category %> <%= moderation.reason %></li>
  <% end %>
<% end %>