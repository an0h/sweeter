<.header>
  Item <%= @item.id %>
  <:subtitle>This is a item record from your database.</:subtitle>
  <:actions>
    <.link href={~p"/items/#{@item}/edit"}>
      <.button>Edit item</.button>
    </.link>
  </:actions>
</.header>

<.list>
  <:item title="Title"><%= @item.title %></:item>
  <:item title="Body"><pre><%= @item.body %></pre></:item>
  <:item title="Format"><%= @item.format %></:item>
  <:item title="Source"><%= @item.source %></:item>
  <.live_component module={ReactionsComponent} id={@item.id} content={@item.body} />
</.list>

<h3>Add you Reaction</h3>
<div id="emoji-trigger">☀️your reactions🌑</div>
<input type="hidden" id="item_id" value={@item.id}>
<div id="reactions">
  <div id="add-reaction"></div>
</div>

<%= if @item.images do %>
  <%= for image <- @item.images do %>
  <img src={"https://sweetipfs.herokuapp.com/read?ipfscid=#{image.ipfscid}"} />
  <%= end %>
<%= end %>

<.back navigate={~p"/items"}>Back to items</.back>
