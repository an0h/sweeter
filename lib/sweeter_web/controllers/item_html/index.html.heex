<.header>
  Published Items
  <:actions>
    <.link href={~p"/items/new"}>
      <.button>New Item</.button>
    </.link>
  </:actions>
<%= if @prev != 0 do %>
<.link navigate={~p"/items/page/#{@prev}"}>prev</.link>
<% end %>
  <.link navigate={~p"/items/page/#{@next}"}>next</.link>
</.header>

<.item_list items={@items} page={@page} prev={@prev} next={@next} />